<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Hello World!" />

    <EditText
        android:id="@+id/main_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_txt"
        android:layout_marginLeft="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"/>

    <Button
        android:id="@+id/mainBtn"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_below="@+id/main_editText"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="ok"/>

    <Button
        android:id="@+id/mainBtnNewActivity"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_below="@+id/mainBtn"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="CheckBox"/>

    <Button
        android:id="@+id/mainBtnSeekBarActivity"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_below="@+id/mainBtnNewActivity"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="SeekBar"/>

    <Button
        android:id="@+id/mainBtnCameraActivity"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_below="@+id/mainBtnSeekBarActivity"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Camera"/>

    <Button
        android:id="@+id/mainBtnVideoActivity"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_below="@+id/mainBtnSeekBarActivity"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Video"/>

</RelativeLayout>