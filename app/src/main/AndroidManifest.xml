<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rightel.mykotlin">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityCheckBox" />
        <activity android:name=".SeekBarActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".VideoActivity" />
        <activity android:name=".RecyclerViewActivity" />
        <activity android:name=".SelectImageFromGalleryActivity" />
        <activity android:name=".RestApiActivity"></activity>
    </application>

</manifest>